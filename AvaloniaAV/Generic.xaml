<Styles xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:AvaloniaAV;assembly=AvaloniaAV">
  <Style Selector="local|VideoViewer">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Panel>
            <Image Source="{TemplateBinding CurrentPlayback.CurrentFrame^.FrameBitmap}" />
            <DockPanel Background="Black" Opacity="0.5" VerticalAlignment="Bottom">
              <Button Background="Black" Name="PART_PlayPauseButton" DockPanel.Dock="Left">
                <Path Fill="White" Data="M 0,0 L 0,100 L 50,50 L 0,0" />
              </Button>
              <TextBlock DockPanel.Dock="Right" Text="{TemplateBinding CurrentPlayback.Duration}" />
              <!--<Slider IsVisible="false" Minimum="0" Value="{TemplateBinding CurrentPlayback.CurrentFrame^.Time}"
                      Maximum="{TemplateBinding CurrentPlayback.Duration}" />-->
            </DockPanel>
          </Panel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style Selector="local|VideoViewer:seekable /template/ Slider">
    <Setter Property="IsVisible" Value="true" />
  </Style>
  <Style Selector="local|VideoViewer:playing /template/ Button#PART_PlayPauseButton Path">
    <Setter Property="Data" Value="M 0,0 L 0,100 L 33,100 L 33,0 L 0,0 Z M 66,0 L 66,100 L 100,100 L 0,100 L 66,100" />
  </Style>
</Styles>